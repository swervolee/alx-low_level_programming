#include "variadic_functions.h"
#include <stdio.h>
#include <stdarg.h>

/**
 *print_all - a function to print
 *@format: the format specifier
 *Return: nothing
 */

void print_all(const char * const format, ...)
{
	int i = 0;
	char *s;
	va_list agstna;

	va_start(agstna, format);

	while (format[i])
	{
		switch (format[i])
		{
		case 'c':
			printf("%c", va_arg(agstna, int));
			break;
		case 'i':
			printf("%d", va_arg(agstna, int));
			break;
		case 'f':
			printf("%f", va_arg(agstna, double));
			break;
		case 's':
			s = va_arg(agstna, char *);
			if (!s)
				printf("nil");
			printf("%s", s);
			break;

		}
		if (format[i + 1])
			printf(", ");
		i++;
	}
	va_end(agstna);
	printf("\n");
}
