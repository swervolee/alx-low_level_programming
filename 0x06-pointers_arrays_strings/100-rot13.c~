#include "main.h"
/**
 *rot13 - cipher2
 *@s: character input
 *Return: nul
 */
char *rot13(char *s)
{
	int i = 0, cnt = 0;

	while (*(s + cnt) != '\0')
	{
		for (i = 0; i < 26; i++)
		{
			if ((*(s + cnt) >= 'A' && *(s + cnt) <= 'Z') || (*(s + cnt) >= 'a' && *(s + cnt) <= 'z'))
			{
				*(s + cnt) = (*(s + cnt) + 13) % 26;
				break;
			}
		}
		cnt++;
	}
	return (s);
}
